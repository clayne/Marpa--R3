Marpa_Lua * T_MARPA_LUA

INPUT

T_MARPA_LUA
        if (sv_isa($arg, \"Marpa::R3::Lua\")) {
            IV tmp = SvIV((SV*)SvRV($arg));
            $var = INT2PTR(Marpa_Lua *, tmp);
        } else
            Perl_croak(aTHX_ \"%s: %s is not of type Marpa::R3::Lua\",
                        ${$ALIAS?\q[GvNAME(CvGV(cv))]:\qq[\"$pname\"]},
                        \"$var\")

